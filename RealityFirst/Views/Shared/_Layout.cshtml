<div class="container p-4 pb-0">
<!-- Section: Links -->
<section class="">
  <!--Grid row-->
  <div class="row">
    <!-- Grid column -->
    <div class="col-md-3 col-lg-3 col-xl-3 mx-auto mt-3">
      <h6 class="text-uppercase mb-4 font-weight-bold">
        Reality First
      </h6>
      <p>
        Productora de eventos chilena con más de 6 años
        trabajando en la industria, manteniendo los mas altos
        estandares de calidad y experiencia.
      </p>
      <p>
        <img src="~/recursos/Logo Navbar.png" alt="Logo" class="logo-navbar" >
      </p>
    </div>
    <!-- Grid column -->

    <hr class="w-100 clearfix d-md-none" />

    

    <hr class="w-100 clearfix d-md-none" />

    <!-- Grid column -->
    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mt-3">
      <h6 class="text-uppercase mb-4 font-weight-bold">
        Links 
      </h6>
      <p>
        <a class="text-white" asp-controller="Home" asp-action="Nosotros"> Sobre Nosotros</a>
      </p>
      <p>
        <a class="text-white" asp-controller="Home" asp-action="Contacto">Contactanos</a>
      </p>
      <p>
        <a class="text-white" asp-controller="Home" asp-action="Redes">Redes Sociales</a>
      </p>
    </div>

    <!-- Grid column -->
    <hr class="w-100 clearfix d-md-none" />

    <!-- Grid column -->
    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mt-3">
      <h6 class="text-uppercase mb-4 font-weight-bold">Contacto</h6>
      <p><i class="fas fa-home mr-3"></i> Bandera 348, Santiago Centro</p>
      <p><i class="fas fa-envelope mr-3"></i> Reality.First-production@gmail.com</p>
      <p><i class="fas fa-phone mr-3"></i> +22 3485092</p>
      <p><i class="fas fa-print mr-3"></i> +569 23457365</p>
    </div>
    <!-- Grid column -->
  </div>
  <!--Grid row-->
</section>
<!-- Section: Links -->

<hr class="my-3">

<!-- Section: Copyright -->
<section class="p-3 pt-0">
  <div class="row d-flex align-items-center">
    <!-- Grid column -->
    <div class="col-md-7 col-lg-8 text-center text-md-start">
      <!-- Copyright -->
      <div class="p-3">
        © 2022 Copyright:
        <a class="text-white" asp-controller="Home" asp-action="Index"
           >RealityFirst.com</a>
      </div>
      <!-- Copyright -->
    </div>
    <!-- Grid column -->

    
  </div>
</section>
<!-- Section: Copyright -->
</div>
<!-- Grid container -->
</footer>
